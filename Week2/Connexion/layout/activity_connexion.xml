<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0001FC"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/button_create_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Create an account"
        android:background="#FFFFFF"
        android:textColor="#0001FC"
        android:textSize="25dp"
        android:textAllCaps="false"
        ></Button>

    <Button
        android:id="@+id/button_connect_google"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Connect with Google"
        android:background="#FFFFFF"
        android:textColor="#0A1034"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_brands_and_logotypes"
        android:padding="15dp"
        ></Button>

    <Button
        android:id="@+id/button_connect_fb"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Connect with Facebook"
        android:background="#415A93"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_facebook"
        android:padding="15dp"
        ></Button>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0001FC"
            android:text="Already have an account?"
            android:textColor="#FBDF00"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"

            ></TextView>
        <TextView
            android:id="@+id/text_login_link"
            android:autoLink="all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="#FBDF00"
            android:textSize="18sp"
            android:clickable="true"
            ></TextView>
    </LinearLayout>
    <Button
        android:id="@+id/button_skip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Skip for now"
        android:background="#0001FC"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textAllCaps="false"
        ></Button>
</LinearLayout>